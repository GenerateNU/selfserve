{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["jest", "nativewind/types"],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../shared/src/*"],
      "@app/clerk": ["./hooks/clerk.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
